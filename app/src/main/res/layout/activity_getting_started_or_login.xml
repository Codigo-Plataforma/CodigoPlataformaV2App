<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".startups.Getting_started_or_Login">
    <!--ljfbjk-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.5">

            <ImageView
                android:id="@+id/codigoLOGO"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/img"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp">

            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/riseuplayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/riseupbar"
            android:orientation="vertical"
            android:paddingBottom="50dp"
            android:layout_weight="0.5">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingTop="30dp"
                android:text="Welcome"
                android:fontFamily="@font/poppinsbold"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textFontWeight="700"
                android:textSize="40sp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingTop="20dp"
                android:paddingRight="30dp"
                android:paddingBottom="30dp"
                android:text="@string/welcome_text"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/white"
                android:textSize="22sp">

            </TextView>

            <LinearLayout
                android:id="@+id/grouped_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_weight="500"
                    android:background="@drawable/buttonlogin"
                    android:fontFamily="@font/poppinsbold"
                    android:text="@string/btn_login"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    app:backgroundTint="@color/black">

                </Button>

                <Button
                    android:id="@+id/btn_getstarted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="500"
                    android:background="@drawable/buttongetstarted"
                    android:fontFamily="@font/poppinsbold"
                    android:text="@string/btn_getstarted"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/white">

                </Button>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>



</ScrollView>
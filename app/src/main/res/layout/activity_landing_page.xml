<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".Dashboard.LandingPage"
    android:background="@color/greyishwhite"
    tools:ignore="ScrollViewCount">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/welcome_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                app:backgroundTint="@color/orange"
                android:paddingBottom="20dp"
                android:background="@drawable/welcome_layout_shape"
                tools:ignore="UselessParent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/btn_profile"
                            android:layout_marginTop="5dp"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:backgroundTint="#00000000"
                            android:src="@drawable/profile_pic_default"
                            android:contentDescription="profile_settings">
                        </ImageView>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/hamburger_icon_normal"
                            android:layout_alignBottom="@+id/btn_profile_hamburger"
                            android:layout_marginStart="28dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="10dp">
                        </ImageView>
                    </RelativeLayout>
                    <View
                        android:id="@+id/view_offset_helper"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                    </View>
                    <ImageView
                        android:id="@+id/btn_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:backgroundTint="#00000000"
                        android:layout_marginEnd="15dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/search"
                        android:foregroundGravity="center_vertical">
                    </ImageView>
                    <ImageView
                        android:id="@+id/btn_chat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="10dp"
                        app:backgroundTint="#00000000"
                        android:backgroundTint="@color/greyishwhite"
                        android:src="@drawable/chat">
                    </ImageView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome to the Codigo Plataforma"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginStart="60dp"
                        android:layout_marginEnd="60dp"
                        android:layout_marginBottom="100dp"
                        android:layout_marginTop="25dp"
                        android:textSize="24sp"
                        android:gravity="center">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/stats_events"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:background="@drawable/stats_events_layout"
                app:backgroundTint="@color/white"
                android:layout_marginEnd="26dp"
                android:orientation="vertical"
                android:elevation="1dp"
                app:layout_constraintTop_toBottomOf="@+id/welcome_layout"
                android:layout_marginTop="-80dp">
                <RadioGroup
                    android:checkedButton="@+id/offer"
                    android:id="@+id/toggle"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="70dp"
                    android:layout_marginEnd="70dp"
                    android:layout_height="40dp"
                    android:background="@drawable/radio_btn_outline"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_marginLeft="1dp"
                        android:id="@+id/stats"
                        android:background="@drawable/radio_btn_toggle_shape"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:checked="true"
                        android:button="@null"
                        android:gravity="center"
                        android:text="Search"
                        android:textSize="16sp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/white" />

                    <RadioButton
                        android:layout_marginRight="1dp"
                        android:id="@+id/events"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/radio_btn_toggle_shape"
                        android:button="@null"
                        android:gravity="center"
                        android:text="Offers"
                        android:textSize="16sp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/orange" />
                </RadioGroup>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/shape_for_points_stats">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Current level"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="16sp">
                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100/200 problems solved"
                            android:textColor="@color/dark_grey"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="12sp">
                        </TextView>
                    </LinearLayout>
                    <View
                        android:id="@+id/view_offset_helper"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                    </View>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_gravity="center_vertical">
                    </TextView>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/star_icon"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="20dp">
                    </ImageView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Overall"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/black"/>
                        <View
                            android:id="@+id/view_offset_helper"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2">
                        </View>
                        <!--                    seekbar-->
                        <SeekBar
                            android:id="@+id/attendance_seekbar"
                            android:layout_width="wrap_content"
                            android:minWidth="150dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@null"
                            android:indeterminate="false"
                            android:layout_gravity="center_vertical"
                            android:max="100"
                            android:progress="50"
                            android:progressDrawable="@drawable/custom_seekbar"
                            android:progressTint="@color/orange"
                            android:secondaryProgress="0"
                            android:shape="oval"
                            android:splitTrack="false"
                            android:thumb="@drawable/thumb_for_seekbar"
                            tools:ignore="RtlSymmetry">
                        </SeekBar>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Problem solving"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/black"/>
                        <View
                            android:id="@+id/view_offset_helper"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2">
                        </View>
                        <!--                    seekbar-->
                        <SeekBar
                            android:id="@+id/attendance_seekbar"
                            android:layout_width="wrap_content"
                            android:minWidth="150dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@null"
                            android:indeterminate="false"
                            android:layout_gravity="center_vertical"
                            android:max="100"
                            android:progress="50"
                            android:progressDrawable="@drawable/custom_seekbar"
                            android:progressTint="@color/orange"
                            android:secondaryProgress="0"
                            android:shape="oval"
                            android:splitTrack="false"
                            android:thumb="@drawable/thumb_for_seekbar"
                            tools:ignore="RtlSymmetry">
                        </SeekBar>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aptitude"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/black"/>
                        <View
                            android:id="@+id/view_offset_helper"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2">
                        </View>
                        <!--                    seekbar-->
                        <SeekBar
                            android:id="@+id/attendance_seekbar"
                            android:layout_width="wrap_content"
                            android:minWidth="150dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@null"
                            android:indeterminate="false"
                            android:layout_gravity="center_vertical"
                            android:max="100"
                            android:progress="50"
                            android:progressDrawable="@drawable/custom_seekbar"
                            android:progressTint="@color/orange"
                            android:secondaryProgress="0"
                            android:shape="oval"
                            android:splitTrack="false"
                            android:thumb="@drawable/thumb_for_seekbar"
                            tools:ignore="RtlSymmetry">
                        </SeekBar>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="OOPS"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/black"/>
                        <View
                            android:id="@+id/view_offset_helper"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2">
                        </View>
                        <!--                    seekbar-->
                        <SeekBar
                            android:id="@+id/attendance_seekbar"
                            android:layout_width="wrap_content"
                            android:minWidth="150dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@null"
                            android:indeterminate="false"
                            android:layout_gravity="center_vertical"
                            android:max="100"
                            android:progress="50"
                            android:progressDrawable="@drawable/custom_seekbar"
                            android:progressTint="@color/orange"
                            android:secondaryProgress="0"
                            android:shape="oval"
                            android:splitTrack="false"
                            android:thumb="@drawable/thumb_for_seekbar"
                            tools:ignore="RtlSymmetry">
                        </SeekBar>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Basic Programming"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/black"/>
                        <View
                            android:id="@+id/view_offset_helper"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2">
                        </View>
                        <!--                    seekbar-->
                        <SeekBar
                            android:id="@+id/attendance_seekbar"
                            android:layout_width="wrap_content"
                            android:minWidth="150dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@null"
                            android:indeterminate="false"
                            android:layout_gravity="center_vertical"
                            android:max="100"
                            android:progress="50"
                            android:progressDrawable="@drawable/custom_seekbar"
                            android:progressTint="@color/orange"
                            android:secondaryProgress="0"
                            android:shape="oval"
                            android:splitTrack="false"
                            android:thumb="@drawable/thumb_for_seekbar"
                            tools:ignore="RtlSymmetry">
                        </SeekBar>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="35dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

